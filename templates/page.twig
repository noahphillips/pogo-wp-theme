{% extends "base.twig" %}

{% block content %}
	<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
		<section class="heading-content">
			<h1 class="title title-1 is-centered is-grey">{{post.title}}</h1>
		</section>
		
		<main class="has-zindex-2">
			<div class="content is-grey">
				{{post.content}}
			</div>
		</main>
	</div>
	</article>
{% endblock %}
