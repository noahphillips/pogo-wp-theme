{% extends "base.twig" %}

{% block content %}

	<article class="post-type-{{ post.post_type }}" id="post-{{ post.ID }}">

		<section class="heading-content">
			<h1 class="title title-1 is-centered is-grey">{{ post.title }}</h1>
		</section>

		<main class="site-content">
			{% if(true) %}
				<img class="heading-icon" src="{{ site.theme.link }}/static/images/rings.svg">
			{% endif %}
			<div class="content is-grey">
				{{ post.content }}
			</div>
		</main>

	</article>
	{% include "partial/modal-signin.twig" %}
{% endblock %}
